#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/-S" ]; then
  exec "$basedir/-S" node --loader ts-node/esm --no-warnings "$basedir/../@mikro-orm/cli/esm.js" "$@"
else 
  exec -S node --loader ts-node/esm --no-warnings "$basedir/../@mikro-orm/cli/esm.js" "$@"
fi
